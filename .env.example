# Application Settings
APP_NAME=GitHub Code Collaboration Platform
APP_VERSION=0.1.0
DEBUG=true
API_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8080
WORKERS=4

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/code_agent
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_TTL=3600

# GitHub OAuth Settings
# Register your OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_secret=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/github/callback
GITHUB_SCOPES=repo,user

# JWT Settings
JWT_secret_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Local LLM Settings (Optional)
# LOCAL_LLM_URL=http://localhost:8000/v1
# LOCAL_LLM_MODEL=codellama

# File Storage Settings
STORAGE_PATH=/tmp/code_agent
MAX_REPO_SIZE_MB=500

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
